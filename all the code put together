draw = function() {
    if (currentScene === 1){
        splashScreen();
    }
    else if (currentScene === 2){
        gameScreen();
    }
    else if (currentScene === 3){
        helpScreen();
    }
    else if (currentScene === 4){
        endScreen();
    }
};

