var topSky = function(){

var r = 65;
var g = 50;
var b = 135;

for(var y = 0; y < 120; y++){
    stroke(r, g, b);
    
    line(0, y, 400, y);
    
    r += 0.8;
    g += 0.2;
    b -= 0.2;
}

};
topSky();

var bottomSky = function(){
    
var r = 161;
var g = 74;
var b = 111;

//bottom sky
for(var y = 120; y < 240; y++){
    stroke(r, g, b);
    
    line(0, y, 400, y);
    
    r += 0.5;
    g += 0.5;
    b -= 0.3;
}
};
