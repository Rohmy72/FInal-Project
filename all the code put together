lowerWood(x + (h / 100 * 17), y + (h / 100 * -72), h + (h / 100 * 100));
lowerWood(x + (h / 100 * 1), y + (h / 100 * -50), h + (h / 100 * 108));
lowerWood(x + (h / 100 * -20), y + (h / 100 * -32), h + (h / 100 * 119));    
};

