var tree = function(x, y, w, h) {

stroke(30,25,75);
strokeWeight(2.2);

for(var i = y; i < 400; i+=0.4){

    line(x-random(w), i+random(-5, 15), x+random(w), i+random(-5, 15));
    w += h;
    
}

};
